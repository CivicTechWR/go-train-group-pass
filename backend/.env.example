# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Twilio Configuration (for SMS verification)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_PRIVATE_KEY=your_firebase_private_key_here
FIREBASE_CLIENT_EMAIL=your_firebase_client_email_here

# Inngest Configuration (for background jobs)
INNGEST_EVENT_KEY=your_inngest_event_key_here
INNGEST_SIGNING_KEY=your_inngest_signing_key_here

# Email Configuration (for notifications)
RESEND_API_KEY=your_resend_api_key_here

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Join/Leave cutoff window (minutes)
# Users cannot join or leave a trip within this many minutes before departure
# Default is 10 if not set
JOIN_LEAVE_CUTOFF_MINUTES=10

# Database Configuration
# For local Supabase development (default ports from supabase/config.toml)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres
DB_HOST=localhost
DB_PORT=54322
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=postgres

# For production Supabase, use the connection string from your Supabase project settings
# DATABASE_URL=postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
VERCEL_ANALYTICS_ID=your_vercel_analytics_id_here

# Group Formation Job Configuration
# Enable/disable the group formation cron job (default: true)
# Set to 'false' to disable the scheduler (useful for testing)
GROUP_FORMATION_ENABLED=true

# Cron schedule for group formation (default: every minute)
# Uses standard cron format: "seconds minutes hours day month weekday"
# Example: "*/5 * * * *" for every 5 minutes
GROUP_FORMATION_CRON_SCHEDULE=* * * * *

# Time window before departure to start grouping (in minutes, default: 15)
GROUP_FORMATION_WINDOW_MINUTES=15

# Minimum group size (default: 2)
GROUP_FORMATION_MIN_SIZE=2

# Maximum group size (default: 5, matches GO Transit group pass limit)
GROUP_FORMATION_MAX_SIZE=5

# Lock timeout for distributed locking in seconds (default: 300)
GROUP_FORMATION_LOCK_TIMEOUT_SECONDS=300
