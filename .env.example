# ==============================================================================
# Application Configuration
# ==============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================================================
# Supabase Configuration
# ==============================================================================
# Get these from: https://supabase.com/dashboard
# Go to: Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Firebase (for push notifications)
NEXT_PUBLIC_FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=go-pass-app.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=go-pass-app
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=go-pass-app.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:xxxxx
FIREBASE_PROJECT_ID=go-pass-app
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@go-pass-app.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Inngest (for background jobs)
INNGEST_SIGNING_KEY=signkey_xxxxx
INNGEST_EVENT_KEY=eventkey_xxxxx

# Sentry (optional - for error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_AUTH_TOKEN=xxxxx

# ==============================================================================
# MCP Server Configuration
# ==============================================================================

# Git MCP - For Gitea repository operations
# Get PAT from: https://gitea.dredre.net/user/settings/applications
GITEA_URL=https://gitea.dredre.net
GITEA_TOKEN=your_gitea_personal_access_token

# PostgreSQL MCP - Direct database access
# Get from: Supabase Dashboard → Settings → Database → Connection String (URI tab)
# Format: postgresql://postgres.PROJECT_REF:PASSWORD@aws-0-REGION.pooler.supabase.com:6543/postgres
POSTGRES_CONNECTION_STRING=postgresql://postgres.xxxxx:your-password@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Supabase MCP - Uses same credentials as main Supabase config
SUPABASE_URL=${NEXT_PUBLIC_SUPABASE_URL}
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_ROLE_KEY}

# Brave Search MCP (optional - for web search)
# Get from: https://brave.com/search/api/ (2,000 free queries/month)
BRAVE_API_KEY=your_brave_api_key_here
